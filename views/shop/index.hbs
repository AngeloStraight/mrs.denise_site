

<div class="card h-100 w-100">
    <img src="images/mrsdenise.png" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">Owner of Denise Doves</h5>
        <p class="card-text">Welcome to Denese's Doves</p>
    </div>
</div>

<div class="bir-container">

    {{# each birds }}
        {{# each this }}
                <div class="card h-100 w-100">
                    <img src="{{ this.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">This {{ this.name }} is {{ this.age }} years old and sex is {{ this.sex }}.</p>
                        <div>
                            <div class="price pull-right">${{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary" role="button">add to cart</a>
                        </div>
                    </div>
                </div>
        {{/each}}
            
    {{/each}}

</div>
